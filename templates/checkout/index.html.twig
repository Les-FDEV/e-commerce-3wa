{% extends 'base.html.twig' %}

{% block title 'FDEV - Paiement ' %}

{% block body %}

    <div class="container my-4">
        <main>
            <div class="row g-5">
                <div class="col-md-5 col-lg-4 order-md-last"  {{ react_component('CartInformationsController') }} > </div>

                <div class="col-md-7 col-lg-8">
                    <h4 class="mb-3">Adresse de livraison</h4>
                    <form id="_orderInformations"  class="needs-validation" method="post"  action="{{ path('app_valid-checkout') }}">
                        <div class="row g-3">


                            <div class="col-12">
                                <label for="address" class="form-label">Adresse</label>
                                <input type="text" class="form-control" id="address" placeholder="1234 rue des saints" required>
                                <div class="invalid-feedback">
                                    Veuillez indiquer votre adresse d'expédition
                                </div>
                            </div>

                            <div class="col-12">
                                <label for="address2" class="form-label">Complément d'adresse<span class="text-muted">(Facultatif)</span></label>
                                <input type="text" class="form-control" id="address2" placeholder="appartement ,residence , ...">
                            </div>


                            <div class="col-md-3">
                                <label for="zip" class="form-label">Code Postal</label>
                                <input type="text" class="form-control" id="zip" placeholder="91254" required>
                                <div class="invalid-feedback">
                                    Code postal requis.
                                </div>
                            </div>

                            <div class="col-md-4">
                                <label for="zip" class="form-label">Ville</label>
                                <input type="text" class="form-control" id="zip" placeholder="Paris" required>
                                <div class="invalid-feedback">
                                    Ville requis.
                                </div>
                            </div>

                            <div class="col-md-5">
                                <label for="zip" class="form-label">Pays</label>
                                <input type="text" class="form-control" id="zip" placeholder="91254" required>
                                <div class="invalid-feedback">
                                    Pays requis.
                                </div>
                            </div>

                        </div>

                        <hr class="my-4">

                        <h4 class="mb-3">CARTE BANCAIRE</h4>

                            <div  {{ react_component('payment',{'paymentIntent' : paymentIntent }) }} > </div >

                        <hr class="my-4">

                        <input type="hidden" id="_orderProductInformations" name="_orderProductInformations" />

                        <input type="hidden" id="_priceOrder" name="_priceOrder" />
                        <input type="hidden" name="_token" value="{{ csrf_token('valid-payment') }}">

                        <button type="submit">TRY</button>
                    </form>
                </div>
            </div>
        </main>

    </div>



{% endblock body %}